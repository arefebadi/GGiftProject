@model AccountUpdateProfileViewModel

<div class="container-fluid">

    <br />
    <h1>Update Profile</h1>

    <form asp-controller="Account" asp-action="UpdateProfile" method="post">

        <div asp-validation-summary="ModelOnly"> </div>
        <div>

            <div hidden="hidden" class="form-group">
                <label asp-for="ProfileId"></label>
                <input class="form-control" asp-for="ProfileId" />
                <span asp-validation-for="ProfileId"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <input class="form-control" asp-for="FirstName" />
                <span asp-validation-for="FirstName"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName">Last Name</label>
                <input class="form-control" asp-for="LastName" />
                <span asp-validation-for="LastName"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input class="form-control" asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="Password"></label>
                    <input class="form-control" asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword">Confirm Password</label>
                    <input class="form-control" asp-for="ConfirmPassword" />
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>*@
            <div class="form-group">
                <label asp-for="DOB">Date Of Birth</label>
                <input class="form-control" asp-for="DOB" />
                <span asp-validation-for="DOB"></span>
            </div>

            @*<div class="checkbox">
                    <label asp-for="IsAdmin">
                        <input type="checkbox" name="Isadmin"  asp-for="IsAdmin"> Is Admin
                    </label>
                    <span asp-validation-for="IsAdmin"></span>
                </div>*@
        </div>
        <br />


        <div>

            @for (int i = 0; i < Model.Addresses.Count; i++)
            {
                <h3>
                    Address @(i + 1)
                    <button style="border:0; background-color:transparent" value="@Model.Addresses[i].AddressId" name="deleteAddress">
                        <span class="glyphicon glyphicon-remove-sign"></span>
                    </button>
                </h3>

                <div class="form-group" hidden="hidden">
                    <label asp-for="@Model.Addresses[i].AddressId"></label>
                    <input class="form-control" asp-for="@Model.Addresses[i].AddressId" />
                    <span asp-validation-for="@Model.Addresses[i].AddressId"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Addresses[i].Address1"></label>
                    <input class="form-control" asp-for="@Model.Addresses[i].Address1" />
                    <span asp-validation-for="@Model.Addresses[i].Address1"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Addresses[i].Address2"></label>
                    <input class="form-control" asp-for="@Model.Addresses[i].Address2" />
                    <span asp-validation-for="@Model.Addresses[i].Address2"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Addresses[i].Suburb"></label>
                    <input class="form-control" asp-for="@Model.Addresses[i].Suburb" />
                    <span asp-validation-for="@Model.Addresses[i].Suburb"></span>
                </div>


                <div class="form-group">
                    <label asp-for="@Model.Addresses[i].State"></label>
                    <select class="form-control" asp-for="@Model.Addresses[i].State">
                        <option value="NSW">NSW</option>
                        <option value="QLD">QLD</option>
                        <option value="VIC">VIC</option>
                        <option value="SA">SA</option>
                        <option value="TAS">TAS</option>
                        <option value="WA">WA</option>
                        <option value="ACT">ACT</option>
                        <option value="NT">NT</option>
                    </select>
                    <span asp-validation-for="@Model.Addresses[i].State"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Addresses[i].PostCode"></label>
                    <input class="form-control" asp-for="@Model.Addresses[i].PostCode" />
                    <span asp-validation-for="@Model.Addresses[i].PostCode"></span>
                </div>

                <div class="checkbox">
                    <label asp-for="@Model.Addresses[i].IsFavourite">
                        <input type="checkbox" name="IsFavourite" asp-for="@Model.Addresses[i].IsFavourite" class="chb"> IsFavourite
                    </label>
                    <span asp-validation-for="@Model.Addresses[i].IsFavourite"></span>
                </div>

            }
            <div class="form-group">
                <input class="btn btn-success" type="submit" value="AddAddress" name="addaddress" />
            </div>
        </div>
        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="SaveChanges" name="savechanges" />
        </div>

    </form>

</div>
<script type="text/javascript">
